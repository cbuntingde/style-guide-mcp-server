{
  "name": "style-guide-mcp-server",
  "version": "1.0.0",
  "description": "Lightning-fast MCP server providing comprehensive programming style guides, security best practices, and code analysis for 15+ languages with intelligent caching and optimization",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "style-guide",
    "code-quality",
    "security",
    "best-practices",
    "typescript",
    "javascript",
    "python",
    "java",
    "cpp",
    "go",
    "rust",
    "csharp",
    "php",
    "ruby",
    "swift",
    "kotlin",
    "code-analysis",
    "linting",
    "security-guidelines",
    "owasp",
    "vulnerability-detection",
    "performance-optimization",
    "caching",
    "sqlite",
    "claude-desktop",
    "ai-assistant",
    "development-tools",
    "programming-languages",
    "coding-standards",
    "enterprise-grade"
  ],
  "type": "module",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "dev": "tsc && node build/index.js",
    "test": "jest",
    "test:performance": "node --expose-gc tests/performance/test-startup-time.js",
    "test:memory": "node --expose-gc tests/performance/test-memory-usage.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rimraf build",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "better-sqlite3": "^9.2.2",
    "cheerio": "^1.0.0-rc.12",
    "marked": "^9.1.6",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.5",
    "rimraf": "^6.1.0",
    "typescript": "^5.9.3"
  }
}
